{% extends 'base.html.twig' %}

{% block title %}Nieuwe Klant{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4 fw-bold">Nieuwe Klant Toevoegen</h1>

        {{ form_start(form, {'attr': {'class': 'my-4'}}) }}  <!-- Opens the form tag and includes CSRF token -->

        <div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                {{ form_row(form.type, {'attr': {'id': 'type-select', 'class': 'form-control'}}) }}
                {{ form_row(form.naam, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.telefoonnummer, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.startdatum, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.einddatum, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.id, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.contractDetails, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.status, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-success">Opslaan</button>
            </div>
        </div>

        {{ form_end(form) }}  <!-- Closes the form tag and handles form rendering cleanup -->
    </div>
{% endblock %}
