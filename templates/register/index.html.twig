{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<style>
    body { background: none; margin: 0; font-family: Arial, Helvetica, sans-serif;}
    header { background: #3A66CA; padding: 16px 32px; text-align: right;}
    header .support-btn { font-weight: bold; display: block; color: #000; text-decoration: none;}
    header .support-btn:hover { color: #df4a4a; text-decoration: underline;}
    main .container {padding: 46px;}

    main .left {width: 50%; text-align: center; margin: 0; position: absolute; top: 25%; border-right: 2px solid #B5B2B2;}
    main .left h1 { margin-bottom: 60px; font-size: 45px;}
    main form .icon { padding: 0 22px;}
    main form .icon span{ vertical-align: middle; font-size: 32px;}
    main form .email, .password { width: 70%; height: 36px; border: none; background-color: #B5B2B2; margin-bottom: 28px; padding: 0 22px;}
    main form .password { margin-bottom: 8px;}
    main form input:focus {outline: 0;}
    ::placeholder { color: #fff; opacity: 1; font-weight: bold; /* Firefox */ }
    ::-ms-input-placeholder { color: #FFF; font-weight: bold; /* Edge 12-18 */ }
    main form .pass-div { text-align: right; padding-right: 82px;}
    main form .pass-div a { color: #df4a4a; text-decoration: none; font-weight: bold;}
    main form .pass-div a:hover { color: #000; text-decoration: underline;} 
    main form button { background-color: #3A66CA; border: none; color: #FFF; padding: 15px 74px; border-radius: 50px; margin-top: 42px; font-size: 18px; cursor: pointer;}
    main form button:hover { background-color: #df4a4a;}
    main .left .has-acc { margin-top: 22px; color: #df4a4a; font-weight: bold; font-size: 18px;}
    main .left .has-acc a { color: #000; text-decoration: none;}
    main .left .has-acc a:hover { text-decoration: underline;}

    main .right {width: 50%; margin: 0; position: absolute; top: 25%; right: 0; text-align: center; padding: 65px 0;}
    main .right img{ height: 250px;}

    footer { background: #3A66CA; padding: 22px 32px; text-align: center; position: fixed; bottom: 0; width: 100%;}
    footer p { margin: 0; font-weight: bold;}
</style>

<header>
    <a href="#" class="support-btn">Support</a>
</header>

<main>
    <div class="container">
        <div class="left">
            <h1>Registreer pagina</h1>

            <form action="">
                <div>
                    <span class="icon"><span class="material-icons">mail</span></span>
                    <input type="email" placeholder="Email" class="email">
                </div>
                <div>
                    <span class="icon"><span class="material-icons">person</span></span>
                    <input type="text" placeholder="Gebruikersnaam" class="email" required>
                </div>
                <div>
                    <span class="icon"><span class="material-icons">lock</span></span>
                    <input type="password" placeholder="Wachtwoord" class="password" required>
                </div>
                <div><button type="submit">Registreren</button></div>
            </form>
            
            <div class="has-acc">Heb je al een account? <a class="go-register" href="/login">Inloggen</a></div>
        </div>
        <div class="right">
            <img src="https://i.postimg.cc/X7L8GXnL/LogoIWA.jpg" alt="logo">
        </div>
    </div>
</main>

<footer>
    <p>&copy; Copyrights 2024</p>
</footer>

{% endblock %}
