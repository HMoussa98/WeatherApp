{% extends 'base.html.twig' %}

{% block body %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

        <link rel="stylesheet" href="{{ asset('DataAquisition/styles.css') }}">
        <link rel="stylesheet" href="{{ asset('DataAquisition/index.css') }}">
    {% endblock %}


    <main>
    <div class="card py-5">
        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>Station</th>
                <th>Datum</th>
                <th>Tijd</th>
                <th>Temperatuur</th>
                <th>Dauwpunt temperatuur</th>
                <th> Station Luchtdruk </th>
                <th> Zeeniveau Luchtdruk </th>
                <th>Zicht</th>
                <th>Windsnelheid</th>
                <th>Neerslag</th>
                <th>Sneeuwdiepte</th>
                <th>FRSHTT</th>
                <th>Bewolking(%)</th>
                <th>Windrichting</th>
                <!-- Add other fields as needed -->
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ weatherDataRow.id }}</td>
                    <td>{{ weatherDataRow.STN }}</td>
                    <td>{{ weatherDataRow.DATE|date('Y-m-d') }}</td>
                    <td>{{ weatherDataRow.TIME|date('H:i:s') }}</td>
                    <td>{{ weatherDataRow.TEMP }}°C</td>
                    <td>{{ weatherDataRow.DEWP }}°</td>
                    <td>{{ weatherDataRow.STP }}</td>
                    <td>{{ weatherDataRow.SLP }}</td>
                    <td>{{ weatherDataRow.VISIB }}</td>
                    <td>{{ weatherDataRow.WDSP }}</td>
                    <td>{{ weatherDataRow.PRCP }}</td>
                    <td>{{ weatherDataRow.SNDP }}</td>
                    <td>{{ weatherDataRow.FRSHTT }}</td>
                    <td>{{ weatherDataRow.CLDC }}%</td>
                    <td>{{ weatherDataRow.WNDDIR }}</td>


                    <!-- Add other fields as needed -->
                </tr>

            </tbody>
        </table>


    </div>

    <div class="container py-5">
    <div class=" card form update-form">
        <h2>Edit Weather Data Row</h2>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit">Submit</button>
        {{ form_end(form) }}
    </div>
    </div>
</main>

{% endblock %}

{% block title %}

{% endblock %}

